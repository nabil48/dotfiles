[bar/main]
monitor = ${assets.monitor}
width = 100%
height = 18
bottom = true
fixed-center = true

background = ${colors.background}
foreground = ${colors.brightwhite}

border-color = ${colors.background}
border-top-size = 2
border-bottom-size = 2
border-left-size = 0
border-right-size = 0

font-0 = ${assets.font-0}
font-1 = ${assets.font-1}
font-2 = ${assets.font-2}

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right
tray-padding = 0
tray-maxsize = 16
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

modules-left = jgmenu i3 mpd
modules-right = wlan network right temperature hdd0 hdd1 right memory cpu right backlight right volume right date right session
module-margin = 0
module-padding = 0

wm-restack = i3wm
override-redirect = false

