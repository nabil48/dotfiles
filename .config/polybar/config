[module/session]
type = custom/script
interval = 60
exec = getent passwd `whoami` | cut -d : -f 5
click-left = "~/.config/polybar/script/session.sh"

format = %{T2}<label>%{T-}
format-font = 1
format-foreground = ${colors.brightwhite}
format-padding = 1
format-prefix = "ÔäΩ "

;----------------------------------------------------------


[module/hdd0]
